<?xml version="1.0"?>


<!--
The repeat contexts used in this gump are:
First/Second/* Circle: Provides an index to the book. Properties:
- spellname: Name of the spell
- spellpage: On which page of the gump the spell description is located


allspells: Detailed information on all spells. Properties:
- previouspage: Index of the previous gump page
- currentpage: Index of the gump page the spell is on
- nextpage: Index of the next gump page
- sectionname: Name of the section the spell is in (e.g. "First Circle")
- spellid: Numerical ID used to identify the spell on the server
- gumpid: ID of the gumpart texture of the spell
- spellname: Name of the spell
- descriptionheader: Header of the spell description (e.g. "Reagents")
- description: Detailed description of the spell, e.g. reagent list
-->

<gump x="100" y="100" draggable="1" closable="1" resizable="1">
    <page number ="0">
        <image source="gumpart" id="2220" />

        <!-- circle numbers -->
        <button x="58" y="175" page="1">
            <normal source="gumpart" id="2225" />
        </button>
        <button x="92" y="175" page="1">
            <normal source="gumpart" id="2226" />
        </button>
        <button x="129" y="175" page="2">
            <normal source="gumpart" id="2227" />
        </button>
        <button x="164" y="175" page="2">
            <normal source="gumpart" id="2228" />
        </button>
        <button x="227" y="175" page="3">
            <normal source="gumpart" id="2229" />
        </button>
        <button x="260" y="175" page="3">
            <normal source="gumpart" id="2230" />
        </button>
        <button x="297" y="175" page="4">
            <normal source="gumpart" id="2231" />
        </button>
        <button x="332" y="175" page="4">
            <normal source="gumpart" id="2232" />
        </button>
    </page>

    <page number="1">
        <!-- turn page -->
        <button x="321" y="8" page="2">
            <normal source="gumpart" id="2236" />
        </button>

        <tlabel id="spellbooktitle" x="100" y="14" width="40" height="15" text="INDEX" />
        <tlabel id="spellbooktitle" x="55" y="34" width="150" height="15" text="First Circle" />
        <repeat name="First Circle" yincrease="15" xlimit="1">
            <tclicklabel id="spellbooktext" x="55" y="50" width="150" height="15" text="spellname" page="spellpage" />
        </repeat>

        <tlabel id="spellbooktitle" x="267" y="14" width="40" height="16" text="INDEX" />
        <tlabel id="spellbooktitle" x="223" y="34" width="150" height="15" text="Second circle" />
        <repeat name="Second Circle" yincrease="15" xlimit="1">
            <tclicklabel id="spellbooktext" x="223" y="50" width="150" height="15" text="spellname" page="spellpage" />
        </repeat>
    </page>

    <page number="2">
        <!-- turn pages -->
        <button x="50" y="8" page="1">
            <normal source="gumpart" id="2235" />
        </button>

        <tlabel id="spellbooktitle" x="100" y="14" width="40" height="15" text="INDEX" />
        <tlabel id="spellbooktitle" x="55" y="34" width="150" height="15" text="Third Circle" />
        <repeat name="Third Circle" yincrease="15" xlimit="1">
            <tclicklabel id="spellbooktext" x="55" y="50" width="150" height="15" text="spellname" page="spellpage" />
        </repeat>

        <tlabel id="spellbooktitle" x="267" y="14" width="40" height="16" text="INDEX" />
        <tlabel id="spellbooktitle" x="223" y="34" width="150" height="15" text="Fourth circle" />
        <repeat name="Fourth Circle" yincrease="15" xlimit="1">
            <tclicklabel id="spellbooktext" x="223" y="50" width="150" height="15" text="spellname" page="spellpage" />
        </repeat>

        <button x="321" y="8" page="3">
            <normal source="gumpart" id="2236" />
        </button>
    </page>

    <page number="3">
        <!-- turn pages -->
        <button x="50" y="8" page="2">
            <normal source="gumpart" id="2235" />
        </button>

        <tlabel id="spellbooktitle" x="100" y="14" width="40" height="15" text="INDEX" />
        <tlabel id="spellbooktitle" x="55" y="34" width="150" height="15" text="Fifth Circle" />
        <repeat name="Fifth Circle" yincrease="15" xlimit="1">
            <tclicklabel id="spellbooktext" x="55" y="50" width="150" height="15" text="spellname" page="spellpage" />
        </repeat>

        <tlabel id="spellbooktitle" x="267" y="14" width="40" height="16" text="INDEX" />
        <tlabel id="spellbooktitle" x="223" y="34" width="150" height="15" text="Sixth circle" />
        <repeat name="Sixth Circle" yincrease="15" xlimit="1">
            <tclicklabel id="spellbooktext" x="223" y="50" width="150" height="15" text="spellname" page="spellpage" />
        </repeat>

        <button x="321" y="8" page="4">
            <normal source="gumpart" id="2236" />
        </button>
    </page>

    <page number="4">
        <!-- turn pages -->
        <button x="50" y="8" page="3">
            <normal source="gumpart" id="2235" />
        </button>

        <tlabel id="spellbooktitle" x="100" y="14" width="40" height="15" text="INDEX" />
        <tlabel id="spellbooktitle" x="55" y="34" width="150" height="15" text="Seventh Circle" />
        <repeat name="Seventh Circle" yincrease="15" xlimit="1">
            <tclicklabel id="spellbooktext" x="55" y="50" width="150" height="15" text="spellname" page="spellpage" />
        </repeat>

        <tlabel id="spellbooktitle" x="267" y="16" width="40" height="16" text="INDEX" />
        <tlabel id="spellbooktitle" x="223" y="35" width="150" height="15" text="Eighth circle" />
        <repeat name="Eighth Circle" yincrease="15" xlimit="1">
            <tclicklabel id="spellbooktext" x="223" y="50" width="150" height="15" text="spellname" page="spellpage" />
        </repeat>

        <button x="321" y="8" page="5">
            <normal source="gumpart" id="2236" />
        </button>
    </page>

    <repeat name="allspells" xlimit="2" xincrease="168">
        <page number="currentpage">
            <repeatif xindex="0">
                <button x="50" y="8" page="previouspage">
                    <normal source="gumpart" id="2235" />
                </button>
                <tlabel id="spellbooktitle" x="85" y="14" width="100" height="15" text="sectionname" />
            </repeatif>
            <repeatif xindex="1">
                <tlabel id="spellbooktitle" x="65" y="14" width="100" height="15" text="sectionname" />
            </repeatif>

            <button x="55" y="40" action="castspell" param="spellid">
                <normal source="gumpart" id="gumpid" />
            </button>
            <tlabel id="spellbooktitle" x="105" y="38" width="90" height="35" text="spellname" />
            <tlabel id="spellbooktitle" x="55" y="95" width="150" height="15" text="descriptionheader" />
            <tlabel id="spellbooktext" x="55" y="110" width="150" height="55" text="description" />


            <repeatif xindex="0">
                <button x="321" y="8" page="nextpage">
                    <normal source="gumpart" id="2236" />
                </button>
            </repeatif>
        </page>
    </repeat>
</gump>
