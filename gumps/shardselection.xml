<gump x="400" y="300" closable="0" draggable="1" action="selectshard-first" cancelaction="shutdown">
    <!--
    In case you want to redesign this gump, keep in mind that at this point, you can not
    access any uo data (e.g. art.mul graphics), as the mul files are not loaded yet.
    -->
    <tbackground x="0" y="0" width="250" height="250"  />
    <tscrollarea x="20" y="20" width="210" height="137" hvisible="never" vvisible="always" vstep="28" vpage="112" >
        <repeat name="shardlist" yincrease="28" xlimit="1">
            <tbutton x="0" y="0" width="190" height="25" id="selectshard" action="selectshard" param="shardname" text="shardname" />
        </repeat>
    </tscrollarea>

    <tbutton x="20" y="175" width="210" height="25" text="Create shard" action="opengump" param="createshard" />
    <tbutton x="20" y="203" width="210" height="25" text="Close fluorescence" action="shutdown" />

