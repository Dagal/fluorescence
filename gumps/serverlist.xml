<?xml version="1.0"?>
<gump x="387" y="259" closable="0" draggable="0" action="selectserver-first" cancelaction="disconnect">
    <background x="0" y="0" width="250" height="250"  />
    <scrollarea x="20" y="20" width="210" height="137" hvisible="never" vvisible="always" vstep="28" vpage="112" >
        <vscroll visible="always" />
        <content>
            <repeat name="serverlist" yincrease="28" xlimit="1">
                <!--
                Each entry represents a server. Properties:
                - serverindex: An ID number, used to identify the selected server in selection packet
                - servername: The name of the server, as given in the server list packet
                -->
                <button x="0" y="0" width="190" height="25" name="selectserver" action="selectserver" param="serverindex" text="servername" />
            </repeat>
        </content>
    </scrollarea>

    <button x="10" y="175" width="210" height="25" text="Disconnect" action="disconnect" />
    <button x="10" y="203" width="210" height="25" text="Close fluorescence" action="shutdown" />
</gump>
