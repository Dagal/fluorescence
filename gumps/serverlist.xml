<?xml version="1.0"?>
<gump x="387" y="259" closable="0" draggable="0" action="selectserver-first" cancelaction="disconnect">
    <image x="0" y="0" source="theme" id="images/background_250x250.png" />
    <scrollarea template="themescrollarea" x="20" y="20" width="210" height="137">
        <vscroll visible="1" />
        <content>
            <repeat name="serverlist" yincrease="28" xlimit="1">
                <!--
                Each entry represents a server. Properties:
                - serverindex: An ID number, used to identify the selected server in selection packet
                - servername: The name of the server, as given in the server list packet
                -->
                <button template="themebutton" x="0" y="0" width="190" name="selectserver" action="selectserver" param="serverindex" text="servername" />
            </repeat>
        </content>
    </scrollarea>

    <button template="themebutton" x="20" y="175" width="210" text="Disconnect" action="disconnect" />
    <button template="themebutton" x="20" y="203" width="210" text="Exit fluorescence" action="shutdown" />
</gump>
