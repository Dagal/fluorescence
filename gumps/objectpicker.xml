<?xml version="1.0" ?>
<gump x="250" y="150" closable="1" draggable="1">
    <background template="thingreybackground" width="250" height="300" />
    <label x="5" y="7" width="240" name="questionlabel" text="dummy" align="center" /> <!-- text is set automatically -->
    <scrollarea template="themescrollarea" x="5" y="30" width="240" height="265">
        <content>
            <repeat name="answers" xlimit="1" yincrease="28" xincrease="0">
                <!-- Each entry represents a possible answer to the question. Properties:
                - serial: Needs to be included in the response
                - menuid: Needs to be included in the response
                - answerid: Numerical ID of the current answer
                - answertext: The actual answer
                - artid: The art id for this item
                - hue: The hue for this item
                -->
                <button x="5" y="5" action="pickerresponse" param="serial" param2="menuid" param3="answerid" param4="artid" param5="hue">
                    <normal source="staticart" id="artid" hue="hue" />
                    <mouseover source="staticart" id="artid" hue="hue" />
                    <mousedown source="staticart" id="artid" hue="hue" />
                </button>
                <label x="50" y="10" text="answertext" />
            </repeat>
        </content>
    </scrollarea>
</gump>
