<?xml version="1.0"?>
<gump x="100" y="100" draggable="1" closable="1" resizable="1">
      <background template="thingreybackground" width="400" height="400" />

      <scrollarea template="uoscrollarea" x="5" y="5" width="390" height="390">
            <vscroll visible="always" />
            <hscroll visible="never" />
            <content>
                  <repeat name="skills" yincrease="22" xlimit="1">
                        <!--
                        Each entry represents a skills. Properties:
                        - skillname: Name of the skill
                        - skillid: Numerical ID
                        - skillvalue: Skill value with modifications
                        - skillbase: Skill value without modifications
                        - skillcap: Maximum skill value
                        - skillusable: Wheter or not this skill is directly usable (0 or 1)
                        -->
                        <repeatif test="skillusable">
                            <button template="blueknob" x="1" y="3" action="useskill" param="skillid" />
                        </repeatif>
                        <label x="15" y="1" width="180" text="skillname" />
                        <propertylabel x="220" y="1" width="30" link="skillvalue" />
                        <label x="240" y="1" width="5" text="/" />
                        <propertylabel x="245" y="1" width="30" link="skillcap" />
                        <label x="290" y="1" width="35" text="Base: " />
                        <propertylabel x="335" y="1" width="30" link="skillbase" />
                  </repeat>
            </content>
      </scrollarea>
</gump>
