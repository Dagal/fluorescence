<gump x="100" y="100" draggable="1" closable="1" resizable="1">
    <tbackground width="400" height="400" />

    <tscrollarea x="5" y="5" width="390" height="390">
        <repeat name="skills" yincrease="22" xlimit="1">
            <repeatif test="skillusable">
                <tbutton x="1" y="1" width="20" height="20" text="X" action="useskill" param="skillid" />
            </repeatif>
            <tlabel x="25" y="1" width="180" height="20" text="skillname" />
            <propertylabel x="220" y="1" width="30" height="20" link="skillvalue" />
            <tlabel x="240" y="1" width="5" height="20" text="/" />
            <propertylabel x="245" y="1" width="30" height="20" link="skillcap" />
            <tlabel x="290" y="1" width="35" height="20" text="Base: " />
            <propertylabel x="335" y="1" width="30" height="20" link="skillbase" />
        </repeat>
    </tscrollarea>
</gump>
